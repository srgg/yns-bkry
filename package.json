{
  "name": "yana-bakery",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "make-dist-dir": "mkdir -p dist",
    "copy-source": "cp index.html dist/",
    "build:scss": "node scripts/build-scss.js",
    "copy-images": "cp -r images dist/images",
    "build": "npm run make-dist-dir && node scripts/build-scss.js && node scripts/copy-assets.js",
    "preview": "http-server dist -p 8080 -c-1"
  },
  "devDependencies": {
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "sass": "^1.80.5"
  }
}
